<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTransporte.Interfaces.VEagregarCliente"
             NavigationPage.HasNavigationBar="False"
             Padding="0">
    <Grid RowDefinitions=".1*,.9*">
        <Grid BackgroundColor="#cb4335"
              ColumnDefinitions=".1*,.9*"
              Padding="20,0,0,0">
            <Button BackgroundColor="Transparent"
                    Clicked="Btn_atras"/>
            <Image Source="atras.png"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="20"
                   HeightRequest="20"
                   WidthRequest="20" />
            <Label Text="Agregar nuevo cliente"
                   Grid.Column="1"
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   FontFamily="Comf-Medium"
                   Padding="20,20,0,0"/>
        </Grid>
        <Grid Grid.Row="1 ">
            <VerticalStackLayout>
                <Frame WidthRequest="500"
                       HeightRequest="50"
                       Padding="0,10,0,0"
                       BackgroundColor="AliceBlue"
                       BorderColor="Transparent">
                <Label Text=""
                       x:Name="TituloLabel"
                       HorizontalOptions="Center"
                       FontFamily="Comf-Bold"
                       FontSize="Medium" />
            </Frame>
                <VerticalStackLayout Spacing="30"
                                     Margin="0,20,20,0">
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="usuario.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               BackgroundColor="Transparent"
                               Grid.Column="1"
                               x:Name="NombreEntry"
                               Placeholder="Nombre"
                               FontFamily="Comf-Medium"
                               VerticalOptions="Center" />
                    </Grid>
                    <!-- Apellido -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="usuario.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               Grid.Column="1"
                               x:Name="ApellidoEntry"
                               Placeholder="Apellido"
                               FontFamily="Comf-Medium"
                               VerticalOptions="Center" />
                    </Grid>
                    <!-- Tipo de Documento -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="tipodoc.png"
                               HorizontalOptions="Center"></Image>
                        <Grid Grid.Column="1">
                            <Picker x:Name="TipoDocumentoPicker"
                                    Title="Tipo de documento"
                                    FontFamily="Comf-Bold"
                                    TextColor="Black">
                                <Picker.Items>
                                    <x:String>DNI</x:String>
                                    <x:String>RUC</x:String>
                                </Picker.Items>
                            </Picker>
                        </Grid>
                    </Grid>
                    <!-- Número de Documento -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="tipodoc.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               Grid.Column="1"
                               x:Name="NumeroDocEntry"
                               Placeholder="Numero Documento"
                               Keyboard="Numeric"
                               FontFamily="Comf-Medium"
                               VerticalOptions="Center"
                               MaxLength="11"/>
                    </Grid>
                    <!-- Teléfono -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="telefono.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               Grid.Column="1"
                               x:Name="TelefonoEntry"
                               Placeholder="Telefono"
                               FontFamily="Comf-Medium"
                               Keyboard="Numeric"
                               MaxLength="9"
                               VerticalOptions="Center" />
                    </Grid>
                    <!-- Dirección -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="direccion.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               Grid.Column="1"
                               x:Name="DireccionEntry"
                               Placeholder="Direccion"
                               FontFamily="Comf-Medium"
                               VerticalOptions="Center" />
                    </Grid>
                    <!-- Email -->
                    <Grid ColumnDefinitions=".2*,.8*">
                        <Image WidthRequest="40"
                               HeightRequest="40"
                               Source="email.png"
                               HorizontalOptions="Center"></Image>
                        <Entry PlaceholderColor="#515a5a"
                               Grid.Column="1"
                               x:Name="EmailEntry"
                               Placeholder="E-mail"
                               FontFamily="Comf-Medium"
                               VerticalOptions="Center" />
                    </Grid>
                    <!-- Botón de Guardar y actualizar-->
                    <HorizontalStackLayout HorizontalOptions="Center">
                    <Button Text="Guardar Cliente"
                            HeightRequest="50"
                                x:Name="GuardarCliente"
                                WidthRequest="300"
                                IsVisible="False"
                                FontFamily="Comf-Bold"
                            Clicked="OnGuardarClienteClicked"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="40"/>
                        <Button Text="Actualizar Cliente"
                                x:Name="ActualizarCliente"
                                HeightRequest="50"
                                WidthRequest="300"
                                IsVisible="False"
                                FontFamily="Comf-Bold"
                                Clicked="Btn_ActualizarCliente"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="40" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
        </Grid>
    </Grid>
</ContentPage>
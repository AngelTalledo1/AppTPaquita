<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AppTransporte.Interfaces.VEUsuarios"
              xmlns:VME="clr-namespace:AppTransporte.viewModel"
              NavigationPage.HasNavigationBar="False"
             Title="VEUsuarios">
    <ContentPage.BindingContext>
        <VME:VMUsuario />
    </ContentPage.BindingContext>
    <!-- Header Bar -->
    <Grid RowDefinitions=".1*,.1*,.8*">
        <Grid ColumnDefinitions=".1*,.9*"
          BackgroundColor="#cb4335"
          Padding="20,0,0,0">
            <Button BackgroundColor="Transparent"
            Clicked="Btn_atrasUsuario" />
            <Image Source="atras.png"
           HorizontalOptions="Center"
           VerticalOptions="End"
           Margin="20"
           HeightRequest="20"
           WidthRequest="20" />
            <Label Text="Gestion de usuarios"
       x:Name="tituloInterfaz"
       Grid.Column="1"
       FontSize="20"
       TextColor="White"
       HorizontalOptions="Start"
       VerticalOptions="Center"
       FontFamily="Comf-Medium"
       Padding="20,20,0,0"/>
        </Grid>

        <!-- Search Section -->
        <StackLayout Grid.Row="1" Padding="15,10">
            <Grid ColumnDefinitions="Auto,*" Margin="0,5">
                <Label Grid.Column="0" Text="Buscar por:" VerticalOptions="Center" FontSize="16"/>
                <Frame Grid.Column="1" BorderColor="#e0e0e0" BackgroundColor="White" 
                       CornerRadius="5" Padding="10,0" HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" Source="search_icon.png" HeightRequest="20" WidthRequest="20"
                               VerticalOptions="Center" Margin="0,0,10,0"/>
                        <Entry Grid.Column="1" Placeholder="Nombre de usuario" 
                               VerticalOptions="Center" FontSize="16"/>
                    </Grid>
                </Frame>
            </Grid>

        </StackLayout>

        <!-- User List -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Margin="10">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="#bc4749"
                           HorizontalOptions="Center" />
                <CollectionView ItemsSource="{Binding Usuarios}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10"
                           BackgroundColor="#edf2f4"
                           CornerRadius="10"
                           BorderColor="Transparent"
                           Margin="3">
                                <toolkit:Expander>
                                    <toolkit:Expander.Header>
                                        <Grid ColumnDefinitions="1*,.2*"
                                      RowDefinitions="1*,1*">
                                            <Label Text="{Binding Username}"
                                           FontFamily="Comf-Bold" />
                                            <Button BackgroundColor="Transparent"
                                            Grid.Column="2"
                                            Grid.RowSpan="2"
                                           
                                            CommandParameter="{Binding .}" />
                                            <Image Source="edit.png"
                                           Grid.Column="2"
                                           Grid.RowSpan="2"
                                           VerticalOptions="Center"
                                           WidthRequest="20" />
                                        </Grid>
                                    </toolkit:Expander.Header>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Referencias}"
                                       FontFamily="Comf-SemBold" />
                                    </VerticalStackLayout>
                                </toolkit:Expander>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AppTransporte.Interfaces.VEUsuarios"
              xmlns:VME="clr-namespace:AppTransporte.viewModel"
              NavigationPage.HasNavigationBar="False"
             Title="VEUsuarios">
    <ContentPage.BindingContext>
        <VME:VMUsuario />
    </ContentPage.BindingContext>
    <!-- Header Bar -->
    <Grid RowDefinitions=".1*,.9*">
        <Grid ColumnDefinitions=".1*,.9*"
          BackgroundColor="#cb4335"
          Padding="20,0,0,0">
            <Button BackgroundColor="Transparent"
            Clicked="Btn_atrasUsuario" />
            <Image Source="atras.png"
           HorizontalOptions="Center"
           VerticalOptions="End"
           Margin="20"
           HeightRequest="20"
           WidthRequest="20" />
            <Label Text="Gestión de usuarios"
           x:Name="tituloInterfaz"
           Grid.Column="1"
           FontSize="20"
           TextColor="White"
           HorizontalOptions="Start"
           VerticalOptions="Center"
           FontFamily="Comf-Medium"
           Padding="20,20,0,0"/>
        </Grid>

        <Grid Grid.Row="1" RowDefinitions=".15*,.85*">
            <!-- Sección de búsqueda y filtros -->
            <Grid Margin="15,10" RowDefinitions="Auto,Auto">
                <HorizontalStackLayout Spacing="5">
                    <Label Text="Buscar: "
                           FontFamily="Comf-Medium"
                           VerticalOptions="Center" />
                    <SearchBar Placeholder="Buscar por username"
                               FontFamily="Comf-Bold"
                               Text="{Binding TextoBusqueda}"
                               VerticalTextAlignment="Center"
                               WidthRequest="250"
                               TextColor="Black" />
                </HorizontalStackLayout>

                <!-- Separar el filtro de estado en una nueva fila para mejor visibilidad -->
                <HorizontalStackLayout Grid.Row="1" Margin="0,10,0,0" Spacing="5">
                    <CheckBox IsChecked="{Binding MostrarSoloActivos}" 
                              Color="#cb4335"
                              VerticalOptions="Center" />
                    <Label Text="Solo usuarios activos" 
                           FontFamily="Comf-Medium" 
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Grid>

            <!-- Lista de usuarios -->
            <Grid Grid.Row="1">
                <ScrollView>
                    <VerticalStackLayout Margin="10">
                        <CollectionView ItemsSource="{Binding Usuarios}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#edf2f4"
                                           Opacity="0.85"
                                           Margin="0,3"
                                           Padding="10"
                                           HasShadow="False"
                                           CornerRadius="15">
                                        <toolkit:Expander>
                                            <toolkit:Expander.Header>
                                                <Grid ColumnDefinitions="1*,.2*"
                                                      RowDefinitions="1*,1*">
                                                    <Label Text="{Binding Username}"
                                                           FontFamily="Comf-Bold" 
                                                           TextColor="Black"
                                                           VerticalOptions="Center"/>
                                                    <Button ImageSource="edit.png"
                                                            WidthRequest="25"
                                                            Clicked="editar_usuario"
                                                            BackgroundColor="Transparent"
                                                            Padding="0"
                                                            CommandParameter="{Binding .}"
                                                            HorizontalOptions="End" />
                                                    <Button ImageSource="eliminar.png"
                                                            Grid.Column="1"
                                                            CommandParameter="{Binding .}"
                                                            BackgroundColor="Transparent"
                                                            Padding="0"
                                                            Clicked="eliminar_usuario"
                                                            WidthRequest="25"
                                                            HorizontalOptions="End" />
                                                </Grid>
                                            </toolkit:Expander.Header>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Nombres}" FontFamily="Comf-Medium" />
                                                <Label Text="{Binding TipoUsuario}" FontFamily="Comf-Medium" />
                                                <Label Text="{Binding Estado, StringFormat='Estado: {0}'}" 
                                                       FontFamily="Comf-Medium"
                                                       TextColor="{Binding Estado, Converter={StaticResource BoolToColorConverter}}" />
                                            </VerticalStackLayout>
                                        </toolkit:Expander>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Indicador de carga mejorado, similar al de Calendar.xaml -->
                <Grid x:Name="LoadingOverlay" 
                      IsVisible="{Binding IsBusy}" 
                      BackgroundColor="#80000000">
                    <Frame CornerRadius="10" 
                           BackgroundColor="White" 
                           WidthRequest="180" 
                           HeightRequest="120"
                           BorderColor="#cb4335"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                              HeightRequest="40" 
                                              WidthRequest="40" 
                                              Color="#cb4335"/>
                            <Label Text="Cargando usuarios..." 
                                   FontFamily="Comf-Medium"
                                   TextColor="#333333"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:VME="clr-namespace:AppTransporte.viewModel"
             x:Class="AppTransporte.Interfaces.VEclientes"
             Title="VEclientes">
    <ContentPage.BindingContext>
        <VME:VMClientes />
    </ContentPage.BindingContext>
    <Grid RowDefinitions=".1*,.9*"
          BackgroundColor="Red">
        <Grid ColumnDefinitions=".7*,.3*">
            <Label Text="Clientes"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White" />
            <Image Source="intclientes.png"
                   Grid.Column="1"
                   WidthRequest="70" />
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle CornerRadius="30,30,0,0"
                            Fill="#ccd1d1" />
            <Grid RowDefinitions=".8*,.2*">
                <Label Text="Buscar por Nombre de Cliente"
                       FontAttributes="Bold"
                       Margin="20,10,0,0" />
                <SearchBar x:Name="ClienteSearchBar"
                           Placeholder="Nombre del Cliente"
                           FontAttributes="Italic"
                           Margin="10,25,0,0" />
                <ScrollView Margin="10,70,0,20">
                    <VerticalStackLayout>
                        <CollectionView x:Name="clienteCollectionView"
                                        ItemsSource="{Binding clientes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#515a5a"
                                           Opacity="0.85"
                                           Margin="0,10,0,0"
                                           WidthRequest="400"
                                           HeightRequest="80"
                                           HasShadow="False"
                                           CornerRadius="20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding nombre}"
                                                   FontSize="18"
                                                   Grid.Column="0" />
                                            <Label Text="{Binding telefono}"
                                                   FontSize="16"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"
                                                   Grid.Column="1" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
                <Grid Grid.Row="1">
                    <HorizontalStackLayout Spacing="30"
                                           HorizontalOptions="End"
                                           Margin="0,0,30,0">
                        <Button Text="Agregar"
                                TextColor="White"
                                HeightRequest="50"
                                WidthRequest="100"
                                BackgroundColor="Red" />
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
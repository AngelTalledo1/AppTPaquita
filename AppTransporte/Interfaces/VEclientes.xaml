<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:VME="clr-namespace:AppTransporte.viewModel"
             x:Class="AppTransporte.Interfaces.VEclientes"
             Title="VEclientes">
    <ContentPage.BindingContext>
        <VME:VMClientes />
    </ContentPage.BindingContext>
    <Grid RowDefinitions=".07*,.9*"
          BackgroundColor="#cb4335">
        <Grid ColumnDefinitions=".1*,.9*">
            <Button BackgroundColor="Transparent"
                    Clicked="Btn_atrasCliente" />
            <Image Source="atras.png"
                   HorizontalOptions="Center"
                   HeightRequest="20"
                   WidthRequest="20"
                   Margin="20,20,0,0" />
            <Label Text="Clientes"
                   FontSize="20"
                   FontFamily="Comf-Bold"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   TextColor="White" 
                   Grid.Column="1"
                   Margin="30,20,0,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle CornerRadius="0,0,0,0"
                            Fill="#FBF6FD" />
            <Grid RowDefinitions=".8*,.2*">
                <Label Text="Buscar por Nombre de Cliente"
                       FontFamily="Comf-SemBold"
                       Margin="20,10,0,0" />
                <SearchBar x:Name="ClienteSearchBar"
                           Placeholder="Nombre del Cliente"
                           FontFamily="Comf-Reg"
                           Margin="10,30,0,10" />
                <ScrollView Margin="10,83,0,20">
                    <VerticalStackLayout>
                        <CollectionView x:Name="clienteCollectionView"
                                        ItemsSource="{Binding clientes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#515a5a"
                                           Opacity="0.85"
                                           Margin="0,10,0,0"
                                           WidthRequest="400"
                                           HeightRequest="80"
                                           HasShadow="False"
                                           CornerRadius="20" Padding="10">
                                        <Grid ColumnDefinitions=".15*,.70*,.15*" Padding="0">
                                            <Image Source="usu.png"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   WidthRequest="40"/>
                                            <Grid Grid.Column="1" RowDefinitions=".5*,.5*" Padding="-8">
                                                <Label Text="{Binding nombre}"
                                                   FontSize="15"
                                                   FontFamily="Comf-SemBold"
                                                   HorizontalOptions="Center"
                                                       VerticalOptions="End"
                                                   TextColor="White"/>
                                                <Grid Grid.Row="1"
                                                      ColumnDefinitions=".07*,.38*,.1*,.38*,.07*">
                                                    <Label Text="{Binding DNI}"
                                                       FontSize="12"
                                                       FontFamily="Comf-SemBold"
                                                       HorizontalOptions="End"
                                                       Grid.Column="1"
                                                       TextColor="White" />
                                                <Label Text="{Binding telefono}"
                                                       FontSize="12"
                                                       FontFamily="Comf-Medium"
                                                       HorizontalOptions="StartAndExpand"
                                                       Grid.Column="3"
                                                       TextColor="White" />
                                                 </Grid>
                                             </Grid>
                                        
                                            <Grid Grid.Column="3"
                                                  ColumnDefinitions=".5*,.5*" 
                                                  Padding="0">
                                                <Button ImageSource="edit.png"
                                                        WidthRequest="25"
                                                        BackgroundColor="Transparent"
                                                        Padding="0"
                                                        HorizontalOptions="Start"/>
                                                <Button ImageSource="eliminar.png"
                                                        Grid.Column="1"
                                                        BackgroundColor="Transparent"
                                                        Padding="0"
                                                        WidthRequest="25"
                                                        HorizontalOptions="End"/>
                                                
                                            </Grid>
                                            
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
                <Grid Grid.Row="1">
                    <HorizontalStackLayout Spacing="30"
                                           HorizontalOptions="End"
                                           Margin="0,0,30,0">
                        <Button Text="Agregar"
                                TextColor="White"
                                FontFamily="Comf-Bold"
                                HeightRequest="50"
                                WidthRequest="100"
                                BackgroundColor="#cb4335"
                                Clicked="btn_agregarCliente"/>
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>